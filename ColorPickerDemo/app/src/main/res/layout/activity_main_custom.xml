<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#7f020000"
    >
    <RelativeLayout android:id="@+id/dropShowerRL" android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:background="#66000000">

        <LinearLayout android:id="@+id/dropperX" android:layout_width="60dp" android:layout_height="60dp" android:background="@drawable/llist_for_color" android:padding="2dp">
            <LinearLayout android:id="@+id/dropper" android:layout_width="58dp" android:layout_height="58dp" ></LinearLayout>
        </LinearLayout>
        <TextView android:id="@+id/dropperTV" android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:layout_marginLeft="@dimen/activity_horizontal_margin"
                  android:layout_toRightOf="@+id/dropperX" android:textColor="#FFF"></TextView>
        <TextView android:id="@+id/dropperTVRGB" android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_below="@+id/dropperTV" android:layout_marginLeft="@dimen/activity_horizontal_margin"
                  android:layout_toRightOf="@+id/dropperX" android:textColor="#FFF"></TextView>

        <ImageView android:layout_centerVertical="true" android:id="@+id/shareButton" android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:layout_alignParentRight="true" android:src="@drawable/selector"></ImageView>

    </RelativeLayout>

<RelativeLayout
    android:id="@+id/activity_main"
    android:layout_below="@+id/dropShowerRL"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="in.relsellglobal.colorpickerdemo.MainActivity">



    <FrameLayout android:layout_below="@+id/dropShowerRL"  android:background="#FFF" android:layout_width="match_parent" android:layout_height="300dp" android:id="@+id/content" android:layout_marginTop="@dimen/activity_vertical_margin">
    <in.relsellglobal.colorpickerdemo.CustomImageView android:id="@+id/image"
                                                      android:layout_width="match_parent" android:layout_height="300dp"
                                                      android:scaleType="fitCenter"/>

    </FrameLayout>


    <ImageView android:id="@+id/cursorimage" android:layout_below="@+id/content" android:layout_marginTop="@dimen/activity_vertical_margin" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/dropper_image"/>

    <TextView android:id="@+id/tosTV" android:layout_width="wrap_content" android:layout_height="wrap_content" android:visibility="gone"
              android:layout_below="@+id/content" android:layout_marginTop="@dimen/activity_vertical_margin"
              android:layout_alignParentRight="true" android:textColor="#FFF" android:text="TOS &amp; Privacy Policy" ></TextView>


    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/cursorimage"
                  android:gravity="center_horizontal" >

        <Button android:id="@+id/cameraBtn" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Use Camera" />

        <Button android:id="@+id/galleryBtn" android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Use Gallery"/>

    </LinearLayout>


</RelativeLayout>

</RelativeLayout>